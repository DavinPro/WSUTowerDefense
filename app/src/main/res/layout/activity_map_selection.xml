<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".activity.MapSelectionActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="731dp"
        android:layout_height="411dp"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/main_menu_background" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/select_a_map"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_Map1"
                android:layout_width="275.33dp"
                android:layout_height="177.33dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/todo"
                android:onClick="mapSelected"
                app:srcCompat="@mipmap/map_1" />

            <ImageView
                android:id="@+id/img_Map2"
                android:layout_width="275.33dp"
                android:layout_height="177.33dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:contentDescription="@string/todo"
                android:onClick="mapSelected"
                app:srcCompat="@mipmap/map_2" />

            <ImageView
                android:id="@+id/img_Map3"
                android:layout_width="275.33dp"
                android:layout_height="177.33dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:contentDescription="@string/todo"
                android:onClick="mapSelected"
                app:srcCompat="@mipmap/map_3" />

            <ImageView
                android:id="@+id/img_Map4"
                android:layout_width="275.33dp"
                android:layout_height="177.33dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:contentDescription="@string/todo"
                android:onClick="mapSelected"
                app:srcCompat="@mipmap/map_4" />

            <ImageView
                android:id="@+id/img_Map5"
                android:layout_width="275.33dp"
                android:layout_height="177.33dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:contentDescription="@string/todo"
                android:onClick="mapSelected"
                app:srcCompat="@mipmap/map_5" />

            <ImageView
                android:id="@+id/img_Map6"
                android:layout_width="275.33dp"
                android:layout_height="177.33dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:contentDescription="@string/todo"
                android:onClick="mapSelected"
                app:srcCompat="@mipmap/map_6" />

            <ImageView
                android:id="@+id/img_Map7"
                android:layout_width="275.33dp"
                android:layout_height="177.33dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:contentDescription="@string/todo"
                android:onClick="mapSelected"
                app:srcCompat="@mipmap/map_7" />

            <ImageView
                android:id="@+id/img_Map8"
                android:layout_width="275.33dp"
                android:layout_height="177.33dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:contentDescription="@string/todo"
                android:onClick="mapSelected"
                app:srcCompat="@mipmap/map_8" />

            <ImageView
                android:id="@+id/img_Map9"
                android:layout_width="275.33dp"
                android:layout_height="177.33dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:contentDescription="@string/todo"
                android:onClick="mapSelected"
                app:srcCompat="@mipmap/map_9" />

        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#4CAF50"
        android:onClick="btnPlayClicked"
        android:text="@string/play"
        android:textSize="18sp"
        app:icon="@mipmap/play"
        app:iconSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#009688"
        android:onClick="btnBackClicked"
        android:text="@string/back"
        android:textSize="18sp"
        app:icon="@mipmap/back"
        app:iconSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_mapName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="@string/map_name"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>