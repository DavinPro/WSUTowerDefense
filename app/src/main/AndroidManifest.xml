<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.wsu.towerdefense">

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:name=".Application"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/Theme.TowerDefense">
    <activity
      android:name=".view.activity.ScoresActivity"
      android:screenOrientation="sensorLandscape" />
    <activity
      android:name=".view.activity.PauseActivity"
      android:screenOrientation="sensorLandscape"
      android:theme="@style/Theme.CustomTheme" />
    <activity
      android:name=".view.activity.SettingsActivity"
      android:screenOrientation="sensorLandscape" />
    <activity
      android:name=".view.activity.GameSelectionActivity"
      android:screenOrientation="sensorLandscape" />
    <activity
      android:name=".view.activity.MapSelectionActivity"
      android:screenOrientation="sensorLandscape" />
    <activity
      android:name=".view.activity.GameActivity"
      android:screenOrientation="sensorLandscape" />
    <activity
      android:name=".view.activity.MainActivity"
      android:screenOrientation="sensorLandscape">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
  </application>

</manifest>